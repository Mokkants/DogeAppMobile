<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="5dp"
    android:background="#939393"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_id"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:src="@drawable/trancing_dog" />

    <LinearLayout
        android:id="@+id/dog_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4sp">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dog_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Some name"
            android:textSize="15sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dog_breed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Some breed"
            android:textSize="15sp" />


        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dog_social"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Don't know"
            android:textSize="15sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Info: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dog_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Some info"
            android:textSize="15sp" />
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>